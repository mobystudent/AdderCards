main.main(data-name="remove")
	.container
		h1.main__title
			| Удалить пользователя
		
		form.form(action="#" method="GET")
			.form__wrap
				.form__field
					label.form__label
						span.form__name
							| ФИО
						input.form__input.form__item(data-field="FIO" name="name" type="text" placeholder="Введите ФИО" required)
				.form__field
					span.form__name
						| Подразделение/факультет
					.form__select.form__item.select(data-field="Department" data-type="NameID" data-select="depart")
						header.select__header
							span.select__value(data-title="title" data-name-id="name-id")
								| Выберите подразделение/факультет
						ul.select__list
							
							- for (let i = 0; i < 5 ; i++)
								li.select__item
									span.select__name(data-title="Химический факультет" data-name-id="ChemDep")
										| Химический факультет
				.form__field
					span.form__name
						| Причина удаления
					.form__select.form__item.select(data-field="TitleID" data-type="StatusID" data-select="reason")
						header.select__header
							span.select__value(data-title="title" data-reason="type")
								| Выберите причину удаления
						ul.select__list
							li.select__item
								span.select__name(data-title="Перевод в другое подразделение" data-reason="changeDepart")
									| Перевод в другое подразделение
							li.select__item
								span.select__name(data-title="Увольнение" data-reason="remove")
									| Увольнение
				.form__field.form__field--depart
					span.form__name
						| Новое подразделение/факультет
					.form__select.form__item.select(data-field="NewDepart" data-type="NewNameID" data-select="new-depart")
						header.select__header
							span.select__value(data-title="title" data-new-name-id="new-name-id")
								| Выберите подразделение/факультет
						ul.select__list
							
							- for (let i = 0; i < 5 ; i++)
								li.select__item
									span.select__name(data-title="Химический факультет" data-new-name-id="ChemDep")
										| Химический факультет
									
			button.btn.btn--form#removeUser(type="button" data-type="remove-user")
				| Удалить

		.wrap.wrap--content.wrap--content-remove-item
			.main__cards.main__cards--main
				p.main__count-wrap.main__count-wrap--depart
					span.main__count-text
						| Количество удаленных пользователей:&nbsp
					span.main__count.main__count--remove
						| 0
			.wrap.wrap--table
				header.tab.tab--remove
				.table.table--remove
					header.table__header
						.table__cell.table__cell--header.table__cell--fio
							span.table__text.table__text--header
								| Фамилия Имя Отчество
							button.btn.btn--sort(type="button" data-direction="true")
						.table__cell.table__cell--header.table__cell--department
							span.table__text.table__text--header
								| Подразделение/факультет
						.table__cell.table__cell--header.table__cell--titleid
							span.table__text.table__text--header
								| Причина удаления
						.table__cell.table__cell--header.table__cell--new-depart
							span.table__text.table__text--header
								| Новое подразделение/факультет
					.table__body#tableRemove
						p.table__nothing
							| Не добавленно ни одного пользователя
	
		.info
			p.info__warn
				| Предупреждение! Не все поля заполнены
	
		.main__btns
			button.btn#submitRemoveUser(type="button")
				| Подтвердить и отправить
