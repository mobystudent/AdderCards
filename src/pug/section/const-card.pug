main.main(data-name="const")
	.container
		h1.main__title
			| Добавление карт пользователям
		span.main__depart.main__depart--const(data-depart="")
		.wrap.wrap--content.wrap--content-const
			.main__cards.main__cards--main
				p.main__count-wrap.main__count-wrap--depart
					span.main__count-text
						| Количество карт:&nbsp
					span.main__count.main__count--const
						| 0
				p.main__count-wrap.main__count-wrap--main
					span.main__count-text
						| Общее количество карт:&nbsp
					span.main__count.main__count--all-const
						| 0
			.wrap.wrap--table
				header.tab.tab--const
				.table.table--const
					header.table__header
						.table__cell.table__cell--header.table__cell--fio(data-name='fio')
							span.table__text.table__text--header
								| Фамилия Имя Отчество
							button.btn.btn--sort(type='button' data-direction='true')
						.table__cell.table__cell--header.table__cell--post(data-name='post')
							span.table__text.table__text--header
								| Должность
							button.btn.btn--sort(type='button' data-direction='true')
						.table__cell.table__cell--header.table__cell--cardid(data-name='cardid')
							span.table__text.table__text--header
								| ID карты
						.table__cell.table__cell--header.table__cell--cardname(data-name='cardname')
							span.table__text.table__text--header
								| Номер карты
						.table__cell.table__cell--header.table__cell--statusid(data-name='statusid')
							span.table__text.table__text--header
								| Статус
						.table__cell.table__cell--header.table__cell--clear
						.table__cell.table__cell--header.table__cell--signature
							span.table__text.table__text--header
								| Подпись
					.table__body#tableConst
						p.table__nothing
							| Новых данных нет
							
		.info
			p.info__item.info__item--warn.info__item--fields
				| Предупреждение! Не всем картам присвоен идентификатор.
			p.info__item.info__item--error.info__item--fields
				| Ошибка! Не правильно введен тип ID. Должно быть 10 цифр, без букв!
	
		.main__btns
			button.btn.btn--add#submitConstCard(type='button')
				| Добавить
			button.btn.btn--print(type='button')
				| Распечатать отчет
