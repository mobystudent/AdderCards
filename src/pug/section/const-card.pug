main.main(data-name="const")
	.container
		//- .main__title-wrap
			h1.main__title
				| Добавление карт пользователям
			span.main__depart.main__depart--const(data-depart="" data-id="")

		.wrap.wrap--content.wrap--content-const
			.main__wrap-info.main__wrap-info--const
				.main__cards
					//- p.main__count-wrap
					//- 	span.main__count-text
					//- 		| Количество пользователей:&nbsp
					//- 	span.main__count.main__count--const
					//- 		| 0
