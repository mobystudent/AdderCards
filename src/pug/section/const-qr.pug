main.main(data-name="qr")
	.container
		//- .main__title-wrap
			h1.main__title
				| Добавление QR-кодов пользователям
			span.main__depart.main__depart--qr(data-depart="" data-id="")
			
		.wrap.wrap--content.wrap--content-qr
			.main__wrap-info.main__wrap-info--qr
				.main__cards.main__cards--main
					p.main__count-wrap
						span.main__count-text
							| Количество пользователей:&nbsp
						span.main__count.main__count--qr
							| 0
					p.main__count-wrap
						span.main__count-text
							| Общее количество пользователей:&nbsp
						span.main__count.main__count--all-qr
							| 0
					p.main__count-wrap
						span.main__count-text
							| Осталось сгенерированных QR:&nbsp
						span.main__count.main__count--generate-qr
							| 0
				.main__switchies
					.main__switch
						.tooltip
							span.tooltip__item
								| !
							.tooltip__info.tooltip__info--refresh
								| Если данная опция включена, тогда при поступлении новых данных, они автоматически отобразятся в таблице. Перезагружать страницу не нужно.#[br]
								| Рекомендуется отключить данную функцию при работе с данными в таблице!
						.switch.switch--refresh-qr
							label.switch__wrap.switch__wrap--head
								input.switch__input(type='checkbox')
								small.switch__btn
							span.switch__name.switch__name--disabled
								| Автообновление
					.main__switch
						.tooltip
							span.tooltip__item
								| !
							.tooltip__info.tooltip__info--assign
								| Если в данной опции выставлено автоприсвоение, тогда коды будут автоматически присвоены пользователям. Важно! При нехватке кодов для всех пользователей данная ф-я будет отключена. #[br]
								| Если в данной опции выставлено ручное присваивание, тогда код будет присваеватся для каждого пользоватебя в отдельности.
						.switch.switch--assign-qr
							label.switch__wrap.switch__wrap--head
								input.switch__input(type='checkbox')
								small.switch__btn
							span.switch__name
								| Автоприсвоение
			.wrap.wrap--table
				header.tab.tab--qr
				.table.table--qr
					header.table__header
						.table__cell.table__cell--header.table__cell--fio
							span.table__text.table__text--header
								| Фамилия Имя Отчество
							button.btn.btn--sort(type='button' data-direction='true')
						.table__cell.table__cell--header.table__cell--post
							span.table__text.table__text--header
								| Должность
							button.btn.btn--sort(type='button' data-direction='true')
						.table__cell.table__cell--header.table__cell--cardid
							span.table__text.table__text--header
								| ID qr-кода
						.table__cell.table__cell--header.table__cell--cardname
							span.table__text.table__text--header
								| Номер qr-кода
						.table__cell.table__cell--header.table__cell--statustitle
							span.table__text.table__text--header
								| Статус
						//- .table__cell.table__cell--header.table__cell--switch-assign
							.switch.switch--item
								label.switch__wrap.switch__wrap--item#assignAll
									input.switch__input(type='checkbox')
									span.switch__btn
						.table__cell.table__cell--header.table__cell--signature
							span.table__text.table__text--header
								| Подпись
					.table__body#tableQR
						p.table__nothing
							| Новых данных нет

		section.document
				
		.info.info--page
			p.info__item.info__item--warn.info__item--fields
				| Предупреждение! Не всем пользователям присвоен идентификатор.
			p.info__item.info__item--warn.info__item--deficit
				| Предупреждение! Недостаточно qr-кодов для присвоения пользователям.
			//- p.info__item.info__item--warn.info__item--users
			//- 	| Предупреждение! Нет новых пользователей для присвоения qr-кода.
	
		.main__btns
			button.btn#submitConstQR(type='button')
				| Добавить
