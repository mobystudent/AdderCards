main.main(data-name="download")
	.container
		h1.main__title
			| Загрузка QR-кодов
		.wrap.wrap--content.wrap--content-download
			.main__wrap-info
				.main__cards
					p.main__count-wrap
						span.main__count-text
							| Количество загруженых qr-кодов:&nbsp
						span.main__count.main__count--download
							| 0
			.field
				textarea.field__textarea(placeholder="Загрузите текстовые коды для конвертирования")
					
			button.btn.btn--download#addQRCodes(type="button")
				| Добавить
				
			.main__wrap-info
				.main__cards
					p.main__count-wrap
						span.main__count-text
							| Количество сформированных qr-кодов:&nbsp
						span.main__count.main__count--all-download
							| 0
		
			.wrap.wrap--table
				header.tab.tab--download
				.table.table--download
					header.table__header
						.table__cell.table__cell--header.table__cell--codepicture(data-name='codepicture')
							span.table__text.table__text--header
								| Код для изображения
						.table__cell.table__cell--header.table__cell--cardid(data-name='cardid')
							span.table__text.table__text--header
								| ID qr-кода
						.table__cell.table__cell--header.table__cell--cardname(data-name='cardname')
							span.table__text.table__text--header
								| Номер qr-кода
						.table__cell.table__cell--header.table__cell--delete
					.table__body#tableDownload
						p.table__nothing
							| Новых данных нет
			
			.info
				p.info__item.info__item--warn.info__item--fields
					| Предупреждение! Не верно введена строка с кодом.
				p.info__item.info__item--warn.info__item--missed
					| Предупреждение! Пропущена одна из трех обязательных частей qr-кода, для конвертирования.
				p.info__item.info__item--warn.info__item--deficit
					| Предупреждение! Недостаточно кодов для присвоения пользователям.
				p.info__item.info__item--warn.info__item--users
					| Предупреждение! Нет новых пользователей для присвоения qr-кода.
		
			.main__btns
				button.btn.btn--assign#submitDownloadQR(type='button')
					| Присвоить
