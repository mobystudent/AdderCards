main.main(data-name="remove")
	.container
		h1.main__title
			| Удалить пользователя
		span.main__depart.main__depart--permis
			| Химический факультет
		
		form.form#removeForm(action="#" method="GET")
			.form__wrap
				.form__fields
					.form__field
						span.form__name
							| Пользователь
						.form__select.form__item.select(data-field="FIO" data-select="fio")
							header.select__header
								span.select__value(data-title="title" data-placeholder="Выберите пользователя")
									| Выберите пользователя
							ul.select__list
					//- .form__field
						span.form__name
							| Подразделение/факультет
						.form__select.form__item.select(data-field="Department" data-type="NameID" data-select="name-id")
							header.select__header
								span.select__value(data-title="title" data-name-id="name-id" data-placeholder="Выберите подразделение/факультет")
									| Выберите подразделение/факультет
							ul.select__list
								
								- for (let i = 0; i < 2 ; i++)
									li.select__item
										span.select__name(data-title="Химический факультет" data-name-id="ChemDep")
											| Химический факультет
									li.select__item
										span.select__name(data-title="Биологический факультет" data-name-id="BioDep")
											| Биологический факультет
					.form__field
						span.form__name
							| Причина удаления
						.form__select.form__item.select(data-field="TitleID" data-type="StatusID" data-select="reason")
							header.select__header
								span.select__value(data-title="title" data-reason="type" data-placeholder="Выберите причину удаления")
									| Выберите причину удаления
							ul.select__list
								li.select__item
									span.select__name(data-title="Перевод в другое подразделение" data-reason="changeDepart")
										| Перевод в другое подразделение
								li.select__item
									span.select__name(data-title="Увольнение" data-reason="remove")
										| Увольнение
					.form__field.form__field--hide(data-name="depart")
						span.form__name
							| Новое подразделение
						.form__select.form__item.select(data-field="NewDepart" data-type="NewNameID" data-select="new-name-id")
							header.select__header
								span.select__value(data-title="title" data-new-name-id="new-name-id" data-placeholder="Выберите подразделение")
									| Выберите подразделение
							ul.select__list
								
								- for (let i = 0; i < 5; i++)
									li.select__item
										span.select__name(data-title="Факультет компьютерных наук" data-new-name-id="CSDep")
											| Факультет компьютерных наук
					.form__field.form__field--hide(data-name="date")
						label.form__label
							span.form__name
								| Дата завершения действия пропуска
							input.form__input.form__item#removeDateField(data-field="date" name="date" type="text" placeholder="Введите дату завершения действия пропуска" required)
				.form__aside
					.form__img
						img.img.img--form(src="./images/avatar.svg" alt="user avatar")
					.form__field
						input.form__input.form__input--file.form__item#viewFile(data-field="photofile" name="photofile" type="file")
								
			button.btn.btn--form#removeUser(type="button" data-type="remove-user")
				| Удалить

		.wrap.wrap--content.wrap--content-remove-item
			.main__cards.main__cards--main
				p.main__count-wrap.main__count-wrap--depart
					span.main__count-text
						| Количество удаленных пользователей:&nbsp
					span.main__count.main__count--remove
						| 0
			.wrap.wrap--table
				header.tab.tab--remove
				.table.table--remove
					header.table__header
						.table__cell.table__cell--header.table__cell--fio
							span.table__text.table__text--header
								| Фамилия Имя Отчество
							button.btn.btn--sort(type="button" data-direction="true")
						.table__cell.table__cell--header.table__cell--post
							span.table__text.table__text--header
								| Должность
						//- .table__cell.table__cell--header.table__cell--department
						//- 	span.table__text.table__text--header
						//- 		| Подразделение/факультет
						.table__cell.table__cell--header.table__cell--titleid
							span.table__text.table__text--header
								| Причина удаления
						//- .table__cell.table__cell--header.table__cell--new-depart
						//- 	span.table__text.table__text--header
						//- 		| Новое подразделение
						.table__cell.table__cell--header.table__cell--date
							span.table__text.table__text--header
								| Дата
						.table__cell.table__cell--header.table__cell--edit
						.table__cell.table__cell--header.table__cell--delete
					.table__body#tableRemove
						p.table__nothing
							| Не добавленно ни одного пользователя
	
		.info
			p.info__item.info__item--warn.info__item--fields
				| Предупреждение! Не все поля заполненны.
			p.info__item.info__item--warn.info__item--table
				| Предупреждение! Ни одного пользователя не выбрано.
	
		.main__btns
			button.btn#submitRemoveUser(type="button")
				| Подтвердить и отправить
